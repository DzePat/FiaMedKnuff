<Page
    x:Class="FiaMedKnuff.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FiaMedKnuff"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Name="mainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/bgfuamedknuff1500.png"></ImageBrush>
        </Grid.Background>
        <Grid Name="Board" MaxWidth="1280" MaxHeight="720" VerticalAlignment="Center" HorizontalAlignment="Center"></Grid>

        <Grid x:Name="mainMenu" Visibility="Collapsed">
            <local:MainMenu VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>
        <Image x:Name="imageSource" Width="200" VerticalAlignment="Center" HorizontalAlignment="Right" Tapped="Image_Tapped" Loaded="gifDice" Margin="0,0,30,0">
            <Image.Source>
                <BitmapImage UriSource="Assets/dice-fast.gif"  AutoPlay="False"/>
            </Image.Source>
        </Image>

    </Grid>
</Page>
